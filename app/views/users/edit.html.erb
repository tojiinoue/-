<p id="notice"></p>
<div class="container">
  <div class="row">
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <%= @user.errors.full_messages.each do |message| %>
        <% message %>
      <% end %>
    <% end %>
    <%= form_with model:@user, local:true do |f| %>
      <label for="inputName">name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %><br>
      <label for="inputIntroduction">introduction</label><br>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction" %><br>
      <label for="inputImage">profile_image</label>
      <%= f.attachment_field :profile_image, placeholder: "image" %>
      <%= f.submit "Update User" %>
    <% end %>
  </div>
</div>